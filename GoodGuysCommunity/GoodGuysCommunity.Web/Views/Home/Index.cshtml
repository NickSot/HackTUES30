@{ViewData["Title"] = "Home Page"; }

@model PostsListViewModel

    <div id="sidebar">
        <p class="anotext">Stream</p>
        <a asp-area="broadcast" asp-controller="live" asp-action="watch"><img src="~/images/buttonbeta.png" id="streamimage"></a>
        <p class="anotext">Latest from forum:</p>
            <div id="forumNewest">
                @foreach (var post in Model.posts)
                {
                    <div class="forumcontent"><a class="threadtitle">@post.Author.UserName : @post.Name</a></div>
                        }
                    </div>
</div>
