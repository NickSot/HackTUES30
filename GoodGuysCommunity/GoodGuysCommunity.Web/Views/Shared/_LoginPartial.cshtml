@using GoodGuysCommunity.Data.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (SignInManager.IsSignedIn(User))
{

        <ul class="navbar-nav">
            <li><a asp-area="Forum" asp-controller="Posts" asp-action="Index">Forum</a></li>
            <li><a asp-area="Resources" asp-controller="Browse" asp-action="Index">Resources</a></li>
            <li><a asp-area="broadcast" asp-controller="live" asp-action="watch">Broadcast</a></li>
            <li>
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
                    <button type="submit" class="btn btn-link navbar-btn navbar-link">Log out</button>
                </form>
            </li>
        </ul>
}
else
{

        <a asp-area="" asp-controller="Account" asp-action="Register">Register</a>
        <a asp-area="" asp-controller="Account" asp-action="Login">Login</a>
}
